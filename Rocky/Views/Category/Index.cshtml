@model IEnumerable<Rocky.Models.Category>

<div class="container p-3">
    <div class="row pt-">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i>&nbsp; Create New Category
            </a>
        </div>
    </div>

    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Display order</th>
                    <th></th>
                </tr>
                @foreach (Category category in Model)
                {
                    <tr>
                        <td width="50%">@category.Name</td>
                        <td width="30%">@category.DisplayOrder</td>
                        <td class="text-center text-nowrap">
                            <div class="btn-group" role="group">
                                <a asp-controller="Category" asp-route-Id="@category.Id" 
                                   asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>&nbsp;Edit
                                </a>
                                <a asp-controller="Category" asp-route-Id="@category.Id"
                                   asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash-alt"></i>&nbsp;Delete
                                </a>
                            </div>

                        </td>
                    </tr>
                }
            </thead>
        </table>
    }
    else
    {
        <p>No categories available in the database.</p>
    }
</div>

