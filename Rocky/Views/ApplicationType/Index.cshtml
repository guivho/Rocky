@model IEnumerable<Rocky.Models.ApplicationType>

<div class="container p-3">
    <div class="row pt-">
        <div class="col-6">
            <h2 class="text-primary">Application Type List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary">
                Create New Application Type
            </a>
        </div>
    </div>

    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Application Type Name</th>
                    <th></th>
                </tr>
                @foreach (ApplicationType applicationType in Model)
                {
                    <tr>
                        <td>@applicationType.Name</td>
                        <td></td>
                    </tr>
                }
            </thead>
        </table>
    }
    else
    {
        <p>No application types available in the database.</p>
    }
</div>
